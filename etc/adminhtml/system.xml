<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="torahVerse" sortOrder="20" translate="label" class="torahVerse-main">
            <label>TorahVerse</label>
        </tab>

        <section id="itzielart_torahverse" translate="label" sortOrder="10" showInDefault="1" showInStore="1"
            showInWebsite="1">
            <class>separator-top</class>
            <label>Torah Verse</label>
            <tab>torahVerse</tab>
            <resource>ITZielArt_TorahVerse::configuration</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1"
                showInStore="1" showInWebsite="1">
                <label>General Settings</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>

                <field id="sweep_time" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Sweep time</label>
                    <comment><![CDATA[time in miliseconds between frames.]]></comment>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

                <field id="is_vertical_sweep_possible" translate="label" type="select" sortOrder="30" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is vertical sweep possible</label>
                    <comment><![CDATA[vertical sweep happens when the text is bigger than a frame.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

                <field id="is_group_colours_enable" translate="label" type="select" sortOrder="40" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is group colours enable</label>
                    <comment><![CDATA[Adding colour frame with Group Name.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

                <attribute type="expanded">1</attribute>
            </group>

            <group id="frontend_slider" translate="label" type="text" sortOrder="20" showInDefault="1" showInStore="1"
                showInWebsite="1">
                <label>Homepage bible verse slider</label>

                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>

                <field id="override" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Override configuration</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="sweep_time" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Sweep time</label>
                    <comment><![CDATA[time in miliseconds between frames.]]></comment>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>

                <field id="is_vertical_sweep_possible" translate="label" type="select" sortOrder="40" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is vertical sweep possible</label>
                    <comment><![CDATA[vertical sweep happens when the text is bigger than a frame.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>

                <field id="is_group_colours_enable" translate="label" type="select" sortOrder="50" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is group colours enable</label>
                    <comment><![CDATA[Adding colour frame with Group Name.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>

                <field id="placement" translate="label" type="multiselect" sortOrder="60" showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Placement of a slider</label>
                    <validate>required-entry</validate>
                    <source_model>ITZielArt\TorahVerse\Model\Config\Source\Sliders\Placement</source_model>
                </field>

                <field id="slider" type="multiselect" sortOrder="70" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Slider Configuration</label>
                    <source_model>ITZielArt\TorahVerse\Model\Config\Source\Sliders\Groups</source_model>
                    <frontend_model>ITZielArt\TorahVerse\Block\Adminhtml\MultiUiSelect</frontend_model>
                    <can_be_empty>1</can_be_empty>
                    <comment><![CDATA[Select groups of verses.]]></comment>
                </field>

                <depends>
                    <field id="itzielart_torahverse/general/enable">1</field>
                </depends>

                <attribute type="expanded">0</attribute>
            </group>

            <group id="custom_sliders" translate="label" type="text" sortOrder="30" showInDefault="1" showInStore="1"
                showInWebsite="1">
                <label>Custom bible verse sliders</label>

                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>

                <field id="override" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Override configuration</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="sweep_time" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Sweep time</label>
                    <comment><![CDATA[time in miliseconds between frames.]]></comment>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>

                <field id="is_vertical_sweep_possible" translate="label" type="select" sortOrder="40" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is vertical sweep possible</label>
                    <comment><![CDATA[vertical sweep happens when the text is bigger than a frame.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>

                <field id="is_group_colours_enable" translate="label" type="select" sortOrder="50" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is group colours enable</label>
                    <comment><![CDATA[Adding colour frame with Group Name.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>

                <depends>
                    <field id="itzielart_torahverse/general/enable">1</field>
                </depends>

                <attribute type="expanded">0</attribute>
            </group>

            <group id="backend_slider" translate="label" type="text" sortOrder="40" showInDefault="1" showInStore="1"
                showInWebsite="1">
                <label>Admin panel bible verse slider</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="override" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Override configuration</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sweep_time" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Sweep time</label>
                    <comment><![CDATA[time in miliseconds between frames.]]></comment>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>
                <field id="is_vertical_sweep_possible" translate="label" type="select" sortOrder="40" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is vertical sweep possible</label>
                    <comment><![CDATA[vertical sweep happens when the text is bigger than a frame.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>
                <field id="is_group_colours_enable" translate="label" type="select" sortOrder="50" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Is group colours enable</label>
                    <comment><![CDATA[Adding colour frame with Group Name.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="override">1</field>
                    </depends>
                </field>
                <field id="slider" type="multiselect" sortOrder="60" showInDefault="1" showInWebsite="1"
                    showInStore="1">
                    <label>Slider Configuration</label>
                    <source_model>ITZielArt\TorahVerse\Model\Config\Source\Sliders\Groups</source_model>
                    <frontend_model>ITZielArt\TorahVerse\Block\Adminhtml\MultiUiSelect</frontend_model>
                    <can_be_empty>1</can_be_empty>
                    <comment><![CDATA[Select groups of verses.]]></comment>
                </field>
                <depends>
                    <field id="itzielart_torahverse/general/enable">1</field>
                </depends>
                <attribute type="expanded">0</attribute>
            </group>
        </section>
    </system>
</config>
