<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">
                itzielart_torahverse_verses_listing.itzielart_torahverse_verses_listing_data_source
            </item>
		</item>
	</argument>

	<settings>
		<spinner>itzielart_torahverse_verses_columns</spinner>

		<deps>
			<dep>itzielart_torahverse_verses_listing.itzielart_torahverse_verses_listing_data_source</dep>
		</deps>

        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Verse</label>
            </button>
        </buttons>
	</settings>

	<dataSource component="Magento_Ui/js/grid/provider" name="itzielart_torahverse_verses_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>

		<aclResource>ITZielArt_TorahVerse::verses</aclResource>

		<dataProvider class="ITZielArt\TorahVerse\Ui\DataProvider\Verse\ListingDataProvider"
            name="itzielart_torahverse_verses_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>verse_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>

	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>

		<bookmark name="bookmarks"/>

		<columnsControls name="columns_controls"/>

        <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">itzielart_torahverse_verses_listing.itzielart_torahverse_verses_listing.itzielart_torahverse_verses_columns.ids</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/tree-massactions</item>
                    <item name="indexField" xsi:type="string">verse_id</item>
                </item>
            </argument>

            <action name="delete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url" xsi:type="url" path="itzielart_torahverse/verses/massdelete" />
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete verses</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to delete selected verses?</item>
                        </item>
                    </item>
                </argument>
            </action>

            <action name="groupAssign">
                <settings>
                    <actionDisable>false</actionDisable>
                    <type>group_assign</type>
                    <label translate="true">Group Assign</label>
                    <actions class="ITZielArt\TorahVerse\Ui\Component\MassAction\Verse\GroupAssign"/>
                </settings>
            </action>
        </massaction>

		<filters name="listing_filters"/>

		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="itzielart_torahverse_verses_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">
                    itzielart_torahverse_verses_listing.itzielart_torahverse_verses_listing.itzielart_torahverse_verses_columns.ids
                </param>

				<param name="enabled" xsi:type="boolean">false</param>

                <param name="indexField" xsi:type="string">verse_id</param>

				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" path="itzielart_torahverse/verses/inlineEdit" xsi:type="url"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>

			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">
                        itzielart_torahverse_verses_listing.itzielart_torahverse_verses_listing.itzielart_torahverse_verses_columns_editor
                    </item>

					<item name="target" xsi:type="string">startEdit</item>

					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>

		<selectionsColumn name="ids">
			<settings>
				<indexField>verse_id</indexField>
			</settings>
		</selectionsColumn>

		<column name="verse_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/text</item>
                    <item name="label" xsi:type="string" translate="true">ID</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
		</column>

        <column name="group" class="ITZielArt\TorahVerse\Ui\Component\Listing\Column\Verses\Group">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">Group</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </column>

        <column name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </column>

        <column name="siglum" class="ITZielArt\TorahVerse\Ui\Component\Listing\Column\Verses\Siglum">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">Siglum</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
        </column>

        <column name="translation" class="ITZielArt\TorahVerse\Ui\Component\Listing\Column\Verses\Translation">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">Translation</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
        </column>
		<column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Create</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortable" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
		</column>

        <actionsColumn name="actions" class="ITZielArt\TorahVerse\Ui\Component\Listing\Column\Verses\Actions">
            <settings>
                <indexField>verse_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>70</resizeDefaultWidth>
            </settings>
        </actionsColumn>
	</columns>
</listing>
