<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">itzielart_torahverse_quotes_form.itzielart_torahverse_quotes_form_data_source</item>
        </item>

        <item name="label" xsi:type="string" translate="true">General Information</item>

        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">itzielart_torahverse_quotes_form</item>
        </item>

        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">Back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/index</item>
            </item>
        </item>

        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="save" class="ITZielArt\TorahVerse\Block\Adminhtml\Block\Edit\Quote\SaveButton"/>

            <button name="save_and_continue"
                class="ITZielArt\TorahVerse\Block\Adminhtml\Block\Edit\Quote\SaveAndContinueButton"/>

            <button name="delete" class="ITZielArt\TorahVerse\Block\Adminhtml\Block\Edit\Quote\DeleteButton"/>
        </buttons>

        <namespace>itzielart_torahverse_quotes_form</namespace>

        <dataScope>data</dataScope>

        <deps>
            <dep>itzielart_torahverse_quotes_form.itzielart_torahverse_quotes_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="driver_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>

        <settings>
            <submitUrl path="itzielart_torahverse/quotes/save"/>
        </settings>

        <aclResource>ITZielArt_TorahVerse::addedit</aclResource>

        <dataProvider class="ITZielArt\TorahVerse\Model\Quote\DataProvider" name="itzielart_torahverse_quotes_form_data_source">
            <settings>
                <requestFieldName>quote_id</requestFieldName>
                <primaryFieldName>quote_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label/>
        </settings>

        <field name="quote_id" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">groups</item>
                </item>
            </argument>

            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>quote_id</dataScope>
            </settings>
        </field>

        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">quotes</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>

        <field name="content" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">quotes</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
        </field>

        <field name="author" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">quotes</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Author</label>
                <dataScope>author</dataScope>
            </settings>
        </field>

        <field name="description" sortOrder="50" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">quotes</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
